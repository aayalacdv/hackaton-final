@page "/dashboard"
@using ChartJs.Blazor.PieChart
@using ChartJs.Blazor.Util
@using ChartJs.Blazor.Common
@using ChartJs.Blazor.BarChart

@inject NavigationManager NavigationManager


<div class="w-full h-full mt-20 flex items-center justify-center">

<aside id="default-sidebar" class="fixed mt-20 top-0 left-0 z-40 w-64 h-screen" aria-label="Sidebar">
   <div class="h-full py-4 overflow-y-auto bg-slate-50 dark:bg-slate-50">
      <ul class="space-y-2 font-medium">
         <li>
            <a
            @onclick="ShowDashboard"
             class="flex items-center p-2 rounded-lg  group hover:bg-gray-200">
               <svg class="w-5 h-5 text-yellow-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
                  <path d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066h.002Z"/>
                  <path d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z"/>
               </svg>
               <span class="ms-3 text-gray-600 font-semibold">Dashboard</span>
            </a>
         </li>
         <li>
            <a 
            @onclick="ShowNotifications"
 class="flex items-center p-2 rounded-lg  group hover:bg-gray-200">
               <svg class="w-5 h-5 text-yellow-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
                  <path d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z"/>
               </svg>
               <span class="ms-3 text-gray-600 font-semibold">Inbox</span>
            </a>
         </li>
         <li>
            <a  @onclick="SignOut" class="flex items-center p-2 rounded-lg  group hover:bg-gray-200">
               <svg class="w-5 h-5 text-yellow-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                  <path d="m17.418 3.623-.018-.008a6.713 6.713 0 0 0-2.4-.569V2h1a1 1 0 1 0 0-2h-2a1 1 0 0 0-1 1v2H9.89A6.977 6.977 0 0 1 12 8v5h-2V8A5 5 0 1 0 0 8v6a1 1 0 0 0 1 1h8v4a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-4h6a1 1 0 0 0 1-1V8a5 5 0 0 0-2.582-4.377ZM6 12H4a1 1 0 0 1 0-2h2a1 1 0 0 1 0 2Z"/>
               </svg>
               <span class="ms-3 text-gray-600 font-semibold">Salir</span>
            </a>
         </li>
        
      </ul>
   </div>
</aside>

@if(selectedView == "Dashboard"){
    <div class="w-1/2 h-1/2" >
        <div class="flex  gap-4 justify-between w-3/4">

            <div class="bd-blue-200 shadow-md flex flex-col w-2/4 bg-white p-8 gap-3">
                <div class="text-2xl text-yellow-500 rounded-full bg-white w-12 h-12 flex items-center justify-center shadow-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="w-10 h-10">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M14.25 7.756a4.5 4.5 0 100 8.488M7.5 10.5h5.25m-5.25 3h5.25M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                </div>

                <div>
                    <p class="text-2xl font-bold">500 $</p>
                    <p class="text-sm font-semibold">ganancias en el mes</p>
                </div>
            </div>

            <div class="bd-blue-200 shadow-md flex flex-col w-2/4 bg-white p-8 gap-3">
                <div class="text-2xl text-yellow-500 rounded-full bg-white w-12 h-12 flex items-center justify-center shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" />
                </svg>
                </div>

                <div>
                    <p class="text-2xl font-bold">200</p>
                    <p class="text-sm font-semibold">Usuarios afiliados este mes</p>
                </div>
            </div>
        </div>

        <Chart Config="_chartConfig"></Chart>
    </div>
}
@if(selectedView == "Notifications"){
    <div class="w-1/2 h-1/2" >
        <Notifications/>
    </div>
}
</div>


@code {

    private PieConfig _chartConfig = new();

    private String selectedView = "Dashboard";


    private void ShowDashboard()
    {
        selectedView = "Dashboard";
        InitPieChart();
    }

    private void ShowNotifications()
    {

        selectedView = "Notifications";
    }

    private void SignOut() 
    {
        NavigationManager.NavigateTo("/" , true);
    }
    protected override async Task OnInitializedAsync()
    {
        InitPieChart();
    }

    private void InitPieChart() {
        _chartConfig = new PieConfig
        {
            Options = new PieOptions
            {
                Responsive = true,
                Title = new OptionsTitle
                {
                    Display = true,
                    Text = "% De ganancias por links de afiliado"
                }
            }



        };

        _chartConfig.Data.Labels.Add("Using");
        _chartConfig.Data.Labels.Add("Not Using");

        int usedPercentTotal = 60;
        int notUsedPercentTotal = 40;
        PieDataset<int> dataset = new PieDataset<int>(new[] { notUsedPercentTotal, usedPercentTotal })
        {
            BackgroundColor = new[]
            {
                ColorUtil.ColorHexString(255, 205, 86),
                ColorUtil.ColorHexString(75, 192, 192)
            }
        };

        _chartConfig.Data.Datasets.Add(dataset);

        // init chart bar 

    }
}